        }

        await PrimaryNavLayout.ClearDashboardAlerts();

        if (fullReportRef != null)
        {
            _dashboardId = DashboardId;
            _reportId = ReportId;
            _saveHistory = true;
        }

        await base.OnInitializedAsync();
    }

    protected override async Task OnParametersSetAsync()
