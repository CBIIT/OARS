        parameters.Add("ReportId", ReportId);

        if (dashboard != null && dashboard.CustomPagePath != null)
        {
            navigation.NavigateTo($"{dashboard.CustomPagePath}/{dashboard.DashboardId}", new NavigationOptions
                {
                    ReplaceHistoryEntry = true,
                    ForceLoad = true
                });

