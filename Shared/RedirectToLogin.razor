@inject NavigationManager Navigation
@code {
    protected override void OnInitialized()
    {
        var currentUri = Navigation.ToBaseRelativePath(Navigation.Uri);
        
        var queryParams = new Dictionary<string, object?>();
        if(!string.IsNullOrWhiteSpace(currentUri) && !currentUri.StartsWith("login"))
            queryParams.Add("redirectUri", currentUri);

        Navigation.NavigateTo(Navigation.GetUriWithQueryParameters("login", queryParams), true);
    }
}